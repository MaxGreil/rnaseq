manifest {
  description = 'Proof of concept of a RNA-Seq pipeline with Nextflow'
  author = 'Maximilian Greil'
  nextflowVersion = '>=21.10.5'
  name = 'rnaseq'
  version = '0.1.0'
}

// Global default params, used in configs
params {

  tracedir = "info"
  singleEnd = true
  reads = "$baseDir/data/*.fastq.gz" //default: "$baseDir/data/*.fastq.gz" + params.singleEnd = true, alternative: "$baseDir/data/*_{1,2}*.fastq.gz" + params.singleEnd = false
  
  // Path to the Hisat2 index directory
  hisat2_index = "$baseDir/data/grch38_*.tar.gz" // https://genome-idx.s3.amazonaws.com/hisat/grch38_snptran.tar.gz -> HGFM index for reference plus SNPs and transcripts
  
  // Path to comprehensive gene annotation (gtf file) directory
  gtf_file = "$baseDir/data/*.annotation.gtf.gz" // https://ftp.ebi.ac.uk/pub/databases/gencode/Gencode_human/release_39/gencode.v39.chr_patch_hapl_scaff.annotation.gtf.gz
  
}

profiles {
  standard {
    process.container = 'maxgreil/rnaseq'
    docker.enabled = true
  }
}

// Load base.config by default for all pipelines
includeConfig 'conf/base.config'

timeline {
  enabled = true
  file = "${params.tracedir}/execution_timeline.html"
}
report {
  enabled = true
  file = "${params.tracedir}/execution_report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/execution_trace.txt"
}
dag {
  enabled = true
  file = "${params.tracedir}/pipeline_dag.svg"
}
