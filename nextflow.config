manifest {
  description = 'Proof of concept of a RNA-Seq pipeline with Nextflow'
  author = 'Maximilian Greil'
  nextflowVersion = '>=21.10.5'
  name = 'rnaseq'
  version = '0.1.0'
}

// Global default params, used in configs
params {

  tracedir = "info"
  singleEnd = true
  reads = "data/*{1,2}*.fastq.gz"
  
  // Path to the Hisat2 index directory. If not provided, these indices will be generated the first time this pipeline is executed.
  hisat2_indices = 0
  
}

profiles {
  standard {
    process.container = 'maxgreil/rnaseq'
    docker.enabled = true
  }
}

// Load base.config by default for all pipelines
includeConfig 'conf/base.config'

timeline {
  enabled = true
  file = "${params.tracedir}/execution_timeline.html"
}
report {
  enabled = true
  file = "${params.tracedir}/execution_report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/execution_trace.txt"
}
dag {
  enabled = true
  file = "${params.tracedir}/pipeline_dag.svg"
}
